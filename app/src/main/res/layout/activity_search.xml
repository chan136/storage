<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_checkin_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkin"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="入库记录"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkin_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkin_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_checkout_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="出库记录"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkout_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checkout_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_devices_other_black_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/device"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="货品"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/device_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/device_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_supplier_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/supplier"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="供货商"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/supplier_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/supplier_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_buyer_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buyer"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="买家"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buyer_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buyer_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_checklist_36dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checklist"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="盘货记录"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_list_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checklist_list"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"/>

        <ImageButton
            android:onClick="onClick"
            android:background="@drawable/ic_chevron_right_white_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/checklist_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="320dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"
            android:layout_marginTop="68dp"/>
    </RelativeLayout>

</LinearLayout> 