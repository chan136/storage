<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_main" />

    <LinearLayout
        android:background="@color/checkin"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/param"
            android:onClick="onClick"
            android:text="基本参数"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/activity"
            android:onClick="onClick"
            android:text="最近活动"
            android:textColor="@color/light_white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/analyse"
            android:onClick="onClick"
            android:text="商家分析"
            android:textColor="@color/light_white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/statistics"
            android:onClick="onClick"
            android:text="数据统计"
            android:textColor="@color/light_white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:onClick="onClick"
                android:background="@color/checkin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/person_background"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:onClick="onClick"
                android:layout_marginTop="10dp"
                android:background="@drawable/person_256dp"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/person" />

            <RelativeLayout
                android:background="#000"
                android:alpha="0.2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="100dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/supplier_SKU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:alpha="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/textColorPrimary"/>

                <ImageButton
                    android:onClick="onClick"
                    android:background="@drawable/ic_image_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/image_photo" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="190dp"
                android:textColor="@color/checkin"
                android:id="@+id/textView12" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="340dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="250dp"
                android:textColor="@color/checkin"
                android:id="@+id/textView13" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="160dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/tel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机"
                android:textSize="15dp"
                android:textColor="@color/checkin"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="250dp"
                android:id="@+id/textView14" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="260dp"
                android:id="@+id/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电邮"
                android:textSize="15dp"
                android:textColor="@color/checkin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="310dp"
                android:id="@+id/textView15" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="320dp"
                android:id="@+id/email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="370dp"
                android:textColor="@color/checkin"
                android:id="@+id/textView17" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="160dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ号"
                android:textSize="15dp"
                android:textColor="@color/checkin"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="370dp"
                android:id="@+id/textView16" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="380dp"
                android:id="@+id/qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textSize="15dp"
                android:textColor="@color/checkin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="430dp"
                android:id="@+id/textView18" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="440dp"
                android:id="@+id/describe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网址"
                android:textSize="15dp"
                android:textColor="@color/checkin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="490dp"
                android:id="@+id/textView19"
                android:singleLine="true" />

            <EditText
                android:focusable="false"
                android:theme="@style/EditTextGray"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="500dp"
                android:id="@+id/webpage" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout> 